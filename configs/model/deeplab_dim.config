# Traing baseline PSPNet model from ResNet 50 weights with 713 crop.

model {
    deeplab {
        num_classes: 19
        scale_predictions: true
        train_reduce: true
        feature_extractor {
            type: 'xception_65'
        }
        hyperparams {
            batch_norm {
                train: true
                scale: true
                center: true
                decay: 0.9997
                epsilon: 0.00001
            }
            regularizer {
                l2_regularizer {
                     weight: 0.0001
                }
            }
            initializer {
                variance_scaling_initializer {}
            }
        }
        loss {
            classification_loss {
                softmax {}
            }
            dist_loss {
                none {}
            }
            use_auxiliary_loss: true
        }
    }
}

train_config: {
    batch_size: 2
    num_steps: 20000
    fine_tune_checkpoint_type: "resnet"
    fine_tune_checkpoint: "deeplabv3_cityscapes_train/model.ckpt"
    optimizer {
        momentum_optimizer: {
            learning_rate: {
                polynomial_decay_learning_rate {
                    initial_learning_rate: 0.0001
                    decay_steps: 20000
                    power: 0.9
                }
            }
            momentum_optimizer_value: 0.9
        }
    }
    preprocessor_step {
        random_image_scale {
            min_scale_ratio: 0.5
            max_scale_ratio: 2.0
        }
    }
    preprocessor_step {
        random_image_crop {
            crop_height: 713
            crop_width: 713
            images_channel_dim: 3
            labels_channel_dim: 1
        }
    }
    preprocessor_step {
        random_horizontal_flip {}
    }
}

eval_config: {
    eval_input_type {
        padded_eval_input {
            height: 1025
            width: 2049
        }
    }
    flipped: true
}
